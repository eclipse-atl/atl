<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.2"?>
<plugin>

   <extension
         point="org.eclipse.ui.views">
      <category
            name="ATL Profiler"
            id="org.eclipse.m2m.atl.profiler.ui.executionviewer">
      </category>
      <view
            name="ATL Profiler - Execution View"
            icon="icons/executionview.gif"
            category="org.eclipse.m2m.atl.profiler.ui.executionviewer"
            class="org.eclipse.m2m.atl.profiler.ui.executionviewer.view.ExecutionView"
            id="org.eclipse.m2m.atl.profiler.ui.executionviewer.view.ExecutionView">
      </view>
      <view
            category="org.eclipse.m2m.atl.profiler.ui.executionviewer"
            class="org.eclipse.m2m.atl.profiler.ui.profilingdatatable.ProfilingDataTableView"
            icon="icons/executionview.gif"
            id="org.eclipse.m2m.atl.profiler.ui.profilingdatatable.ProfilingDataTableView"
            name="ATL Profiler - Rules View">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="org.eclipse.ui.resourcePerspective">
         <view
               id="org.eclipse.m2m.atl.profiler.ui.executionviewer.view.ExecutionView"
               moveable="true"
               ratio="0.5"
               relationship="right"
               relative="org.eclipse.ui.views.TaskList"
               visible="true">
         </view>
      </perspectiveExtension>
   </extension>

</plugin>
