rule MoveProperty {
	from
		s: SampleUML!Property (
			s.refImmediateComposite().name = 'C1'
		)
	to
		t: SampleUML!Property (
			owner <- SampleUML!Class.allInstances() -> select(e | e.name = 'C2') ->
					first()
		)
}
